{% liquid
if settings.header_mobile_layout == '01'
assign mobile_header_layout = 'mobile-header-1'
elsif settings.header_mobile_layout == '02'
assign mobile_header_layout = 'mobile-header-2'
endif
%}
<div class="header-mobile {{ mobile_header_layout }}">
    <div class="container">
        <div class="header-mobile--wrapper">
            <div class="header-mobile--item header-mobile--left">
                <div class="header-mobile--icon item__mobile--hamburger">
                    <a class="mobileMenu-toggle" href="{{ routes.all_products_collection_url }}" data-mobile-menu
                        aria-label="menu">
                        <span class="mobileMenu-toggle__Icon"></span>
                    </a>
                </div>
                {%- if settings.header_mobile_layout == '01' -%}
                <div class="header-mobile--icon">
                    {%- if section.settings.show_search -%}
                    <details-modal class="header__iconItem header__search">
                        <details>
                            <summary
                                class="header__icon header__icon--search header__icon--summary link link--text focus-inset modal__toggle"
                                aria-haspopup="dialog" aria-label="{{ 'general.search.search' | t }}"
                                data-search-mobile>
                                <span>
                                    {% render 'icon-search', class: 'modal__toggle-open icon icon-search' %}
                                    {% render 'icon-close', class: 'modal__toggle-close icon icon-close' %}
                                </span>
                            </summary>
                        </details>
                    </details-modal>
                    {%- endif -%}
                </div>
                {%- endif -%}
                {%- if settings.header_mobile_layout == '02' -%}
                <div class="header-mobile--icon">
                    {%- if menu_tab.size > 0 -%}
                    {% assign page_handle = page.handle %}
                    <div class="header__heading header__heading--item">
                        {%- for block in menu_tab -%}
                        {%- liquid
                        assign multi_page_handle = pages[block.settings.link].handle
                        assign multi_page_url = pages[block.settings.link].url
                        assign class = 'header__heading-link focus-inset'

                        if template.suffix contains 'landing'
                        if page_handle == multi_page_handle
                        assign class = 'header__heading-link focus-inset is-active'
                        endif
                        else
                        if forloop.first
                        assign class = 'header__heading-link focus-inset is-active'
                        endif
                        endif

                        if multi_page_url != blank
                        assign url = multi_page_url
                        else
                        assign url = routes.root_url
                        endif
                        -%}

                        <a href="{{ url }}" class="{{ class }} header__heading-logo">
                            {%- if block.settings.logo != blank -%}
                            {%- assign image = block.settings.logo -%}
                            {%- assign image_mb = block.settings.logo_mobile -%}
                            {%- assign image_size = section.settings.logo_width | append: 'x' -%}
                            {%- assign image_size_mb = section.settings.logo_width_mobile | append: 'x' -%}
                            <img {% if image_mb !=blank %}class="logo-m-none" {% endif %}
                                srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                                src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                                alt="{{ image.alt | default: shop.name | escape }}">
                            {% if image_mb != blank %}
                            <img class="logo-d-none"
                                srcset="{{ image_mb | img_url: image_size_mb }} 1x, {{ image_mb | img_url: image_size_mb, scale: 2 }} 2x"
                                src="{{ image_mb | img_url: image_size_mb }}" loading="lazy"
                                class="header__heading-logo" alt="{{ image.alt | default: shop.name | escape }}">
                            {% endif %}
                            {%- elsif block.settings.logo_text != blank -%}
                            <span class="h2 {{ section.settings.logo_text_transform }}">{{ block.settings.logo_text
                                }}</span>
                            {%- else -%}
                            <span class="h2 {{ section.settings.logo_text_transform }}">{{ shop.name }}</span>
                            {%- endif -%}
                        </a>
                        {%- endfor -%}
                    </div>
                    {% else %}
                    <a href="{{ routes.root_url }}" class="header__heading-link focus-inset">
                        {%- if section.settings.logo_mobile != blank -%}
                        {%- assign image = section.settings.logo_mobile -%}
                        {%- assign image_size = section.settings.logo_width_mobile | append: 'x' -%}
                        <img srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                            src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                            alt="{{ image.alt | default: shop.name | escape }}">
                        {%- elsif section.settings.logo != blank -%}
                        {%- assign image = section.settings.logo -%}
                        {%- assign image_size = section.settings.logo_width_mobile | append: 'x' -%}
                        <img srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                            src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                            alt="{{ image.alt | default: shop.name | escape }}">
                        {%- elsif section.settings.logo_text != blank -%}
                        <span class="h2 {{ section.settings.logo_text_transform }}">{{ section.settings.logo_text
                            }}</span>
                        {%- else -%}
                        <span class="h2 {{ section.settings.logo_text_transform }}">{{ shop.name }}</span>
                        {%- endif -%}
                    </a>
                    {% endif %}
                </div>
                {%- endif -%}
            </div>

            {%- if settings.header_mobile_layout == '01' -%}
            <div class="header-mobile--item header-mobile--center">
                <div class="header-mobile--icon">
                    {%- if menu_tab.size > 0 -%}
                    {% assign page_handle = page.handle %}
                    <div class="header__heading header__heading--item">
                        {%- for block in menu_tab -%}
                        {%- liquid
                        assign multi_page_handle = pages[block.settings.link].handle
                        assign multi_page_url = pages[block.settings.link].url
                        assign class = 'header__heading-link focus-inset'

                        if template.suffix contains 'landing'
                        if page_handle == multi_page_handle
                        assign class = 'header__heading-link focus-inset is-active'
                        endif
                        else
                        if forloop.first
                        assign class = 'header__heading-link focus-inset is-active'
                        endif
                        endif

                        if multi_page_url != blank
                        assign url = multi_page_url
                        else
                        assign url = routes.root_url
                        endif
                        -%}

                        <a href="{{ url }}" class="{{ class }} header__heading-logo">
                            {%- if block.settings.logo != blank -%}
                            {%- assign image = block.settings.logo -%}
                            {%- assign image_mb = block.settings.logo_mobile -%}
                            {%- assign image_size = section.settings.logo_width | append: 'x' -%}
                            {%- assign image_size_mb = section.settings.logo_width_mobile | append: 'x' -%}
                            <img {% if image_mb !=blank %}class="logo-m-none" {% endif %}
                                srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                                src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                                alt="{{ image.alt | default: shop.name | escape }}">
                            {% if image_mb != blank %}
                            <img class="logo-d-none"
                                srcset="{{ image_mb | img_url: image_size_mb }} 1x, {{ image_mb | img_url: image_size_mb, scale: 2 }} 2x"
                                src="{{ image_mb | img_url: image_size_mb }}" loading="lazy"
                                class="header__heading-logo" alt="{{ image.alt | default: shop.name | escape }}">
                            {% endif %}
                            {%- elsif block.settings.logo_text != blank -%}
                            <span class="h2 {{ section.settings.logo_text_transform }}">{{ block.settings.logo_text
                                }}</span>
                            {%- else -%}
                            <span class="h2 {{ section.settings.logo_text_transform }}">{{ shop.name }}</span>
                            {%- endif -%}
                        </a>
                        {%- endfor -%}
                    </div>
                    {% else %}
                    <a href="{{ routes.root_url }}" class="header__heading-link focus-inset">
                        {%- if section.settings.logo_mobile != blank -%}
                        {%- assign image = section.settings.logo_mobile -%}
                        {%- assign image_size = section.settings.logo_width_mobile | append: 'x' -%}
                        <img srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                            src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                            alt="{{ image.alt | default: shop.name | escape }}"
                            style="--width-logo-mb: {{ section.settings.logo_width_mobile | append: 'px'}};">
                        {%- elsif section.settings.logo != blank -%}
                        {%- assign image = section.settings.logo -%}
                        {%- assign image_size = section.settings.logo_width_mobile | append: 'x' -%}
                        <img srcset="{{ image | img_url: image_size }} 1x, {{ image | img_url: image_size, scale: 2 }} 2x"
                            src="{{ image | img_url: image_size }}" loading="lazy" class="header__heading-logo"
                            alt="{{ image.alt | default: shop.name | escape }}"
                            style="--width-logo-mb: {{ section.settings.logo_width_mobile | append: 'px'}};">
                        {%- elsif section.settings.logo_text != blank -%}
                        <span class="h2 {{ section.settings.logo_text_transform }}">{{ section.settings.logo_text
                            }}</span>
                        {%- else -%}
                        <span class="h2 {{ section.settings.logo_text_transform }}">{{ shop.name }}</span>
                        {%- endif -%}
                    </a>
                    {% endif %}
                </div>
            </div>
            {%- endif -%}
            <div class="header-mobile--item header-mobile--right">
                {%- if settings.header_mobile_layout == '02' -%}
                <div class="header-mobile--icon">
                    {%- if section.settings.show_search -%}
                    <details-modal class="header__iconItem header__search">
                        <details>
                            <summary
                                class="header__icon header__icon--search header__icon--summary link link--text focus-inset modal__toggle"
                                aria-haspopup="dialog" aria-label="{{ 'general.search.search' | t }}"
                                data-search-mobile>
                                <span>
                                    {% render 'icon-search', class: 'modal__toggle-open icon icon-search' %}
                                    {% render 'icon-close', class: 'modal__toggle-close icon icon-close' %}
                                </span>
                            </summary>
                        </details>
                    </details-modal>
                    {%- endif -%}
                </div>
                {%- endif -%}
                <div class="header-mobile--icon">
                    {%- if shop.customer_accounts_enabled and section.settings.show_customer -%}
                    {% if routes.account_login_url contains '/account/login' %}
                    {% assign is_contained = true %}
                    {% else %}
                    {% assign is_contained = false %}
                    {% endif %}
                    <a href="{{ routes.account_login_url }}"
                        class="header__icon header__icon--account link link--text focus-inset" {% if is_contained %}
                        data-open-auth-sidebar{% endif %}>
                        {% if settings.header_layout == '02' or settings.header_layout == '09' %}
                        {% render 'icon-account-2' %}
                        {% else %}
                        {% render 'icon-account' %}
                        {% endif %}
                        <span class="visually-hidden">
                            {%- liquid
                            if customer
                            echo 'customer.account_fallback' | t
                            else
                            echo 'customer.log_in' | t
                            endif
                            -%}
                        </span>
                    </a>
                    {%- endif -%}
                </div>
                {%- if section.settings.show_cart -%}
                <div class="header-mobile--icon">
                    <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link link--text focus-inset"
                        id="cart-icon-bubble" {% if settings.show_quick_cart %} data-cart-sidebar{% endif %}>
                        {% if settings.header_layout == '02' or settings.header_layout == '03' or settings.header_layout
                        == '05' %}
                        {% render 'icon-cart-2' %}
                        {% elsif settings.header_layout == '07' or settings.header_layout == '06' %}
                        {% render 'icon-cart' %}
                        {% elsif settings.header_layout == '08' or settings.header_layout == '04' or
                        settings.header_layout == '09' %}
                        {% render 'icon-cart-3' %}
                        {% elsif settings.header_layout == '11' %}
                        {% render 'icon-cart-4' %}
                        {% else %}
                        {% render 'icon-cart-2' %}
                        {% endif %}
                        <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
                        <div class="cart-count-bubble"
                            style="background-color:{{ section.settings.mobile_cart_bg_item }}">
                            {%- if cart.item_count < 100 -%} <span class="text"
                                style="color: {{ section.settings.mobile_cart_color_item }};" aria-hidden="true"
                                data-cart-count>{{ cart.item_count }}</span>
                                {%- endif -%}
                                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count:
                                    cart.item_count }}</span>
                        </div>
                    </a>
                </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>